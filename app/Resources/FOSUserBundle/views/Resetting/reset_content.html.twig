{% trans_default_domain 'FOSUserBundle' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

<h1 class="text-center" style="margin-top: 20px; margin-bottom: 25px;">Changement de mot de passe</h1>

<div class="row container-fluid">
    <div class="col-xl-4 col-sm-4">
    </div>
    <div class="col-lg-4 col-sm-4 block-center">
        {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}
            {{ form_widget(form) }}<br>
            <div>
                <input type="submit" class="form-control btn btn-primary" value="{{ 'resetting.reset.submit'|trans }}" />
            </div>
        {{ form_end(form) }}
    </div>
</div>